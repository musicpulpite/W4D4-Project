<h3>New Album</h3>

<form class="" action="<%= albums_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label for="title">Album Title</label>
    <input id="title" type="text" name="album[title]" value="">

  <label for="band">Band</label>
    <select class="" name="album[band_id]">
      <% Band.all.each do |band| %>
        <option <% "selected" if band.id == :band_id %> value="band.id"><%= band.name %></option>??????????????///
      <% end %>
    </select>

  <label for="year">Year</label>
    <input id="year" type="number" name="album[year]" value="">

  <legend>Recorded Live</legend>
    <input type="radio" name="album[live_album]" value="true" id="live">
    <label for="live">Live</label>

    <input type="radio" name="album[live_album]" value="false" id="studio">
    <label for="studio">Studio</label>

  <input type="submit" name="" value="Submit">
</form>
